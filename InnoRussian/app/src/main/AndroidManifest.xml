<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.innorussian">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".QRCodeImageActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".account.LogInActivity" />
        <activity android:name=".account.RegisterActivity" />
        <activity android:name=".account.MyAccountActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavouritesActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".learn_topics.LearnTopicsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".phrases.PhrasesActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".PhraseActivity" />
        <activity
            android:name=".quiz.activities.StudyQuizActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".quiz.activities.DailyQuizResultActivity" />
        <activity android:name=".quiz.activities.InfinitePracticeActivity" />
    </application>

</manifest>